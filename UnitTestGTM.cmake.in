include(@VISTA_SOURCE_DIR@/CommonFunctions.cmake)
#define a variable to store the final log file name & path
set(LOGFILENAME "@UNITTEST_LOG_DIR@/@package_file_name@.log")
set(RoutineImportFile "@SCRIPT_OUTPUT_DIR@/UnitTestRoutines.ro")
set(LogDir "@UNITTEST_LOG_DIR@/Testing/Log")
file(MAKE_DIRECTORY "${LogDir}")
message(STATUS "Collecting Unit Testing Routines...")
execute_process(COMMAND "find" "@VISTA_SOURCE_DIR@/UnitTest/VistA-FOIA/Packages/@package_name@/" -name "*.m" COMMAND "@PYTHON_EXECUTABLE@" @OSEHRA_PATH@/Scripts/PackRO.py WORKING_DIRECTORY @VISTA_SOURCE_DIR@ OUTPUT_FILE ${RoutineImportFile})
message(STATUS "Importing Unit Testing Routines...")
execute_process(COMMAND "@EXPECT_EXEC@" "-f" "@VISTA_BINARY_DIR@/RoutineImportGTM.exp" "${RoutineImportFile}" "${LogDir}/ImportUnitTestRoutines.log")
execute_process(COMMAND "@EXPECT_EXEC@" "-f" "@SCRIPT_OUTPUT_DIR@/@package_file_name@.scp" "${LOGFILENAME}"
RESULT_VARIABLE return ERROR_VARIABLE ERROR)

if(NOT return EQUAL 0)
  file(READ ${LOGFILENAME} contents)
  message(FATAL_ERROR "Error running Expect:\nReturn Value = ${return}\n${contents}\n${ERROR}")
endif()
file(STRINGS "${LOGFILENAME}" OUTPUT)
ReportUnitTestResult(@package_file_name@ @VISTA_SOURCE_DIR@ "${OUTPUT}")
